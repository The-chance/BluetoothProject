<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <com.chenjimou.braceletdemo.widght.ProgressView
        android:id="@+id/progressView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/white"
        app:indicatorBackgroundColor="@color/Grey400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/up"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressView"
        app:layout_constraintRight_toLeftOf="@+id/iv_down"/>
    
    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/down"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/iv_shutdown"
        app:layout_constraintLeft_toRightOf="@+id/iv_up"
        app:layout_constraintTop_toBottomOf="@+id/progressView" />
    
    <ImageView
        android:id="@+id/iv_shutdown"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/shutdown"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressView" />
    
</androidx.constraintlayout.widget.ConstraintLayout>